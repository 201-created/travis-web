<div class="wrapper {{if features.dashboard 'cheatcode'}} {{if auth.signedIn 'non-centered' 'centered'}}  {{if features.showYourPride 'travis-pride'}} {{if features.comicSans 'travis-comicsans'}}">

  <header id="top" class="top">
    {{top-bar}}
  </header>

  {{flash-display}}

  <div class="wrapper-main">
    <div id="main" role="main">
      {{yield}}
    </div>
  </div>

  <aside id="left" class="{{unless auth.signedIn 'hidden'}}">
    {{outlet "left"}}
  </aside>
</div>

{{#if auth.signedOut}}
  {{page-footer}}
{{else if features.dashboard}}
  {{page-footer}} 
{{/if}}
