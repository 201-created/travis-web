{{#if canCancel}}
  {{#if cancel.isRunning}}
    {{loading-indicator height=true}}
  {{else}}
    <a href="#" {{action (perform cancel)}} class="action-button--cancel" title="Cancel job">
      Cancel job
    </a>
  {{/if}}
{{/if}}

{{#if canRestart}}
  {{#if restarters.isRunning}}
    {{loading-indicator height=true}}
  {{else}}
    <a href="#" {{action (perform restart)}} class="action-button--restart" title="Restart job">
      Restart job
    </a>

    {{#if features.proVersion}}
      <a href="#" {{action (perform debug)}} class="action-button--debug" title="Restart as debug job">Debug job</a>
    {{/if}}
  {{/if}}
{{/if}}
